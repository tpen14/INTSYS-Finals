# backend/.env - UPDATED WITH ALL API KEYS

# =================================================
# APPLICATION SETTINGS
# =================================================
APP_NAME=Agri-Aid
DEBUG=True
API_HOST=127.0.0.1
API_PORT=8000
ENVIRONMENT=development

# =================================================
# OLLAMA CONFIGURATION (LOCAL LLM)
# =================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TEMPERATURE=0.7
OLLAMA_KEEP_ALIVE=24h

# =================================================
# PSA (Philippine Statistics Authority)
# =================================================
PSA_BASE_URL=https://openstat.psa.gov.ph
PSA_API_ENDPOINT=https://openstat.psa.gov.ph/api/3/action
PSA_CACHE_TTL=3600
PSA_SCRAPE_TIMEOUT=15

# =================================================
# WEATHER APIs (Multiple options available)
# =================================================

# Option 1: WeatherAPI.com (Recommended for Philippines)
WEATHERAPI_KEY=3c42e32676cf45efb5943927251311


# Select which weather API to use
WEATHER_API_TYPE=weatherapi
# weatherapi_key or openweather

# Serper Search
SERPER_API_KEY=19acd2ad97533d1f167c8e7b0acfd4c240fab942

# =================================================
# WEB SCRAPING SETTINGS
# =================================================
SCRAPE_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPE_RETRY_COUNT=3
SCRAPE_RETRY_DELAY=5
SCRAPE_TIMEOUT=30

# =================================================
# CACHE SETTINGS
# =================================================
CACHE_DIR=./data/cache
CACHE_TTL_SECONDS=3600
CACHE_ENABLED=True

# =================================================
# CORS & SECURITY
# =================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://127.0.0.1:8000"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# =================================================
# LOGGING
# =================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/agri-aid.log

# =================================================
# FEATURE FLAGS
# =================================================
ENABLE_PSA_SCRAPER=True
ENABLE_WEATHER_SERVICE=True
ENABLE_DATA_CACHING=True
ENABLE_BATCH_REQUESTS=True
